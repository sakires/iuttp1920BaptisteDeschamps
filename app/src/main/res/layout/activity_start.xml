<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_joueur1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/joueur_1"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView_joueur2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/joueur_2"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView_joueur3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/joueur_3"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView_joueur4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/joueur_4"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView_joueur5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/joueur_5"
                android:textAlignment="center"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_joueur1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/image_joueur"
                android:visibility="gone"
                app:srcCompat="@android:color/holo_red_dark" />

            <ImageView
                android:id="@+id/img_joueur2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/image_joueur"
                android:visibility="gone"
                app:srcCompat="@android:color/holo_blue_dark" />

            <ImageView
                android:id="@+id/img_joueur3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/image_joueur"
                android:visibility="gone"
                app:srcCompat="@android:color/holo_green_dark" />

            <ImageView
                android:id="@+id/img_joueur4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/image_joueur"
                android:visibility="gone"
                app:srcCompat="@android:color/holo_orange_light" />

            <ImageView
                android:id="@+id/img_joueur5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/image_joueur"
                android:visibility="gone"
                app:srcCompat="@android:color/holo_purple" />
        </LinearLayout>

        <TextView
            android:id="@+id/indicationPartie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <LinearLayout
            android:id="@+id/plateau"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="horizontal"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>